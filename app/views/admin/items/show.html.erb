<div class="container">
  <h3 class="m-5">商品詳細</h3>
  <div class="row">
    <div class="col-lg-4 col-md-4">
      <%= image_tag @item.get_image(350, 300) %>
    </div>
    <div class="col-lg-8 col-md-6">
      <table>
        <tr>
          <td class="col-4">商品名</td>
          <td><%= @item.name %></td>
        </tr>
        <tr>
          <td class="col-4">商品説明</td>
          <td><%= @item.explanation %></td>
        </tr>
        <tr>
          <td class="col-4">ジャンル</td>
          <td><%= @item.genre.name %></td>
        </tr>
        <tr>
          <td class="col-4">
            税込価格<br>
            (税抜価格)
          </td>
          <td><%= @item.with_tax_price.to_s(:delimited) %>(<%= @item.price.to_s(:delimited) %>)円</td>
        </tr>
        <tr>
          <td class="col-4">販売ステータス</td>
          <% if @item.is_sell == true %>
            <td class="fw-bold text-success">販売中</td>
          <% else %>
            <td class="fw-bold text-secondary">販売停止中</td>
          <% end %>
        </tr>
      </table>
      <%= link_to "編集する", edit_admin_item_path(@item), class: 'btn btn-success' %>
    </div>
  </div>
</div>
