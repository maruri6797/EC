<div class="container m-5">
  <div class="row">
    <div class="col-lg-10 col-md-8">
      <h3><%= @customer.last_name + @customer.first_name %>さんの会員情報編集</h3>
      <%= render 'layouts/error', obj: @customer %>
      <%= form_with model: @customer, url: admin_customer_path, method: :patch do |f| %>
      <div class="form-group">
        <%= f.label :id, "会員ID", class: 'col-3' %>
        <%= f.text_field :id, readonly: true %>
      </div>
      <div class="form-group">
        <%= f.label :name, "氏名", class: 'col-3' %>
        <%= f.text_field :last_name, class: 'col-3' %>
        <%= f.text_field :first_name, class: 'col-3' %>
      </div>
      <div class="form-group">
        <%= f.label :name, "フリガナ", class: 'col-3' %>
        <%= f.text_field :last_name_kana, class: 'col-3' %>
        <%= f.text_field :first_name_kana, class: 'col-3' %>
      </div>
      <div class="form-group">
        <%= f.label :postal_code, "郵便番号", class: 'col-3' %>
        <%= f.text_field :postal_code %>
      </div>
      <div class="form-group">
        <%= f.label :address, "住所", class: 'col-3' %>
        <%= f.text_field :address, class: 'col-8' %>
      </div>
      <div class="form-group">
        <%= f.label :phone_number, "電話番号", class: 'col-3' %>
        <%= f.text_field :phone_number %>
      </div>
      <div class="form-group">
        <%= f.label :email, "メールアドレス", class: 'col-3' %>
        <%= f.text_field :email %>
      </div>
      <div class="form-group">
        <%= f.label :is_deleted, "会員ステータス", class: 'col-3' %>
        <%= f.redio_button :is_deleted, false %>
        <%= f.label :is_deleted, "有効" %>
        <%= f.radio_button :is_deleted, true %>
        <%= f.label :is_deleted, "退会" %>
      </div>
      <div class="form-group">
        <%= f.submit "変更を保存", class: 'btn btn-success' 
      </div>
      <% end %>
    </div>
  </div>
</div>