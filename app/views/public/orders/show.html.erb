<div class="container m-5">
  <h3 class="mx-3">注文履歴詳細</h3>
  <div class="row">
    <div class="col-10">
      <div class="col-8">
        <h5>注文情報</h5>
        <table class="table table-bordered">
          <tr>
            <th>注文日</th>
            <td><%= l @order.created_at, format: :short %></td>
          </tr>
          <tr>
            <th>配送先</th>
            <td>
              〒<%= @order.postal_code %><br>
              <%= @order.address %>
              <%= @order.name %>
            </td>
          </tr>
          <tr>
            <th>支払方法</th>
            <td><%= @order.payment_method_i18n %></td>
          </tr>
          <tr>
            <th>ステータス</th>
            <td><%= @order.status_i18n %></td>
          </tr>
        </table>
      </div>
      <div class="col-4">
        <h5>請求情報</h5>
        <table class="table table-bordered">
          <tr>
            <th>商品合計</th>
            <td><%= @order.total_price.to_s(:delimited) %></td>
          </tr>
          <tr>
            <th>配送料</th>
            <td><%= @order.delivery_charge %></td>
          </tr>
          <tr>
            <th>ご請求額</th>
            <td><%= @order.billing_amount.to_s(:delimited) %></td>
          </tr>
        </table>
      </div>
    </div>
    <div class="col-8">
      <h5>注文内容</h5>
      <table class="table table-bordered">
        <thead>
          <tr>
            <th class="col-8">商品</th>
            <th class="col-2">単価(税込)</th>
            <th class="col">個数</th>
            <th class="col">小計</th>
          </tr>
        </thead>
        <tbody>
          <% @order_details.each do |od| %>
          <tr>
            <td><%= od.name %></td>
            <td><%= od.purchase_price %></td>
            <td><%= od.amount %></td>
            <td><%= od.subtotal </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
