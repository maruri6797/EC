<div class="container">
  <div class="row">
    <div class="col-11">
      <h3 class="m-5">配送先登録/一覧</h3>
      <%= form_with model: @address, url: addresses_path, method: :post do |f| %>
        <div class="form-group">
          <%= f.label :postal_code, "郵便番号(ハイフンなし)", class: 'col-4' %>
          <%= f.text_field :postal_code, placeholder: "0000000" %>
        </div>
        <div class="form-group">
          <%= f.label :address, "住所", class: 'col-4' %>
          <%= f.text_field :address, placeholder: "東京都渋谷区代々木神園町0-0" %>
        </div>
        <div class="from-group">
          <%= f.label :name, "宛名", class: 'col-4' %>
          <%= f.text_field :name, placeholder: "令和道子" %>
          <%= f.submit "新規登録", class: 'btn btn-success' %>
        </div>
      <% end %>
      
      <% if @addresses.exists? %>
      <table class="table table-bordered">
        <thead>
          <tr>
            <th class="col-2">郵便番号</th>
            <th class="col-4">住所</th>
            <th class="col-2">宛名</th>
            <th class="col-4"></th>
          </tr>
        </thead>
        <tbody>
          <% @addresses.each do |address| %>
          <tr>
            <td><%= address.postal_code %></td>
            <td><%= address.address %></td>
            <td><%= address.name %></td>
            <td>
              <%= link_to "編集する", edit_address_path(address), class: 'btn btn-success' %>
              <%= link_to "削除する", address_path(addresss), method: :delete, class: 'btn btn-danger' 
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
      <% end %>
    </div>
  </div>
</div>