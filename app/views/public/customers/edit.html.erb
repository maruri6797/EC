<div class="container">
  <div class="row">
    <div class="col-10">
      <h3 class="m-5">会員情報編集</h3>
      <%= form_with model: @customer, url: information_customers_path, method: :patch do |f| %>
        <div class="form-group">
          <%= f.label :氏名, class: 'col-4' %>
          <%= f.text_field :last_name %>
          <%= f.text_field :first_name %>
        </div>
        <div class="form-group">
          <%= f.label :フリガナ, class: 'col-4' %>
          <%= f.text_field :last_name_kana %>
          <%= f.text_field :first_name_kana %>
        </div>
        <div class="form-group">
          <%= f.label :postal_code, "郵便番号", class: 'col-4' %>
          <%= f.text_field :postal_code %>
        </div>
        <div class="form-group">
          <%= f.label :address, "住所", class: 'col-4' %>
          <%= f.text_field :address %>
        </div>
        <div class="form-group">
          <%= f.label :phone_number, "電話番号", class: 'col-4' %>
          <%= f.text_field :phone_number %>
        </div>
        <div class="from-group">
          <%= f.label :email, "メールアドレス", class: 'col-4' %>
          <%= f.text_field :email %>
        </div>
        <div class="form-group">
          <%= f.submit "編集内容を保存", class: 'btn btn-success' %>
          <%= link_to "退会する", check_customers_path, class: 'btn btn-danger' 
        </div>
      <% end %>
    </div>
  </div>
</div>